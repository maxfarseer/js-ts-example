    "@babel/register": "^7.23.7",
    "@types/jest": "^29.5.12",
    "ava": "^6.1.2",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "ts-loader": "^9.5.1",
    "tsimp": "^2.0.11",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
